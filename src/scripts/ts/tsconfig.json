{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",

    "rootDir": "./",        // <- Carpeta donde están los TS
    "outDir": "../js",      // <- Carpeta destino donde irá la misma estructura

    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },

  "include": [
    "./**/*.ts"
  ]
}
