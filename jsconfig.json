{
    "compilerOptions": {
        "checkJs": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "ESNext",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "global.d.ts",
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}